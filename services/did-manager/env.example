# DID Manager Service Configuration

# Server Configuration
PORT=8081
ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=did_manager
DB_PASSWORD=did_manager_password
DB_NAME=did_manager_db
DB_SSLMODE=disable

# Ethereum Blockchain Configuration
ETHEREUM_RPC_URL=http://localhost:8545
ETHEREUM_PRIVATE_KEY=your_private_key_here
ETHEREUM_CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890

# NATS Queue Configuration
NATS_URL=nats://localhost:4222

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Security Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRY=24h

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1m

# Blockchain Job Processing
JOB_PROCESSING_INTERVAL=30s
MAX_RETRIES=3
JOB_TIMEOUT=5m
